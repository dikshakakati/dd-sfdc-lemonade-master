<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>59.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Activation Checklist Validation</masterLabel>
	<description>LEM-13304 - Activation Checklist - Display Validation Results. This component is being used to display Validation Success or Error Records</description>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__RecordPage</target>
		<target>lightning__Tab</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightning__AppPage">
			<property name="validationType" type="String" default="Success" description="Enter Success or Error" label="Validation Type" required="true" />
			<supportedFormFactors>
				<supportedFormFactor type="Small"/>
				<supportedFormFactor type="Large"/>
			</supportedFormFactors>
		</targetConfig>
		<targetConfig targets="lightning__RecordPage">
			<property name="validationType" type="String" default="Success" description="Enter Success or Error" label="Validation Type" required="true" />
			<supportedFormFactors>
				<supportedFormFactor type="Small"/>
				<supportedFormFactor type="Large"/>
			</supportedFormFactors>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>