<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Blank_Description</fullName>
    <active>true</active>
    <description>LEM-2144: It prevents record creation without Description.</description>
    <errorConditionFormula>ISBLANK(Description__c)</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Description field cannot be blank.</errorMessage>
</ValidationRule>
