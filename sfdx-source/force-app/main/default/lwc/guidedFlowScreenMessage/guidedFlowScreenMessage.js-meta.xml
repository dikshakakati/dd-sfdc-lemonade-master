<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>59.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Guided Flow Screen Message</masterLabel>
	<description>LEM-13511 : Display Succes or Failure Message From Guided Flow</description>
	<targets>
		<target>lightning__FlowScreen</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightning__FlowScreen">
			<property name="title" type="String" label="Title" />
			<property name="message" type="String" label="Message" required="true" />
			<property name="mode" type="String" label="Mode" />
			<property name="messageData" type="String" label="Message data" />
			<property name="variant" type="String" label="Variant" required="true" />
			<property name="recordId" type="String" label="Record Id" required="false" />
			<property name="label" type="String" label="Message Data Label" required="false" />
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>