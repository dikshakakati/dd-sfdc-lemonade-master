<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Maximum_Selections_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISBLANK( Maximum_Selections__c ),
NOT(ISBLANK(TEXT(Maximum_Selections_Variant__c)))
)</errorConditionFormula>
    <errorDisplayField>Maximum_Selections__c</errorDisplayField>
    <errorMessage>This is required if maximum selections variant is provided...</errorMessage>
</ValidationRule>
