<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>59.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Lookup Controller For Guided Flow</masterLabel>
	<targets>
		<target>lightning__FlowScreen</target>
		<target>lightning__RecordPage</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightning__FlowScreen">
			<property name="recordId" type="String" label="Record Id" required="true" role="inputOnly" />
			<property name="objectName" type="String" label="Object Name" required="true" role="inputOnly" />
			<property name="label" type="String" description="Label For LookUp" label="Label" required="true" role="inputOnly" />
			<property name="placeholder" type="String" label="Placeholder" role="inputOnly" />
			<property name="displayInfo" type="String" description="Display Infor In JSOn String" label="Display Info" role="inputOnly" />
			<property name="matchingInfo" type="String" label="Matching Info" role="inputOnly" />
			<property name="filter" type="String" label="Filter" role="inputOnly" />
			<property name="defaultValue" type="String" label="Default Value"/>
			<property name="selectedId" type="String" label="Selected Id" role="outputOnly" />
			<property name="globalSearch" type="Boolean" label="Global Search" role="inputOnly"  default="false"/>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>