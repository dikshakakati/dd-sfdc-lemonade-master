<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Icon_Size_Needed_for_Icon_Type</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISBLANK(TEXT(  Dropdown_Icon_Avatar_Size__c  )),
  NOT(ISBLANK(TEXT(  Icon_Type__c  )))
)</errorConditionFormula>
    <errorDisplayField>Dropdown_Icon_Avatar_Size__c</errorDisplayField>
    <errorMessage>Required if Icon Type is specified</errorMessage>
</ValidationRule>
